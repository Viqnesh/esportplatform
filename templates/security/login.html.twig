{% extends 'base.html.twig' %}

{% block title %}Bac a Sable{% endblock %}

{% block body %}

{% include 'inc/horizontalNav.html.twig' %}
  <main class="text-center">
    <h1>ZNO</h1>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="mb-3 row justify-content-center mt-5">
        <label for="staticEmail" class="col-sm-2 col-form-label"><strong>Email</strong></label>
        <div class="col-sm-4">
        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"  class="form-control" id="staticEmail" value="email@example.com" autocomplete="email" required autofocus>
        </div>
    </div>
    <div class="mb-3 row justify-content-center">
        <label for="inputPassword" class="col-sm-2 col-form-label"><strong>Password</strong></label>
        <div class="col-sm-4">
        <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>
    </div>
    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn btn-info mt-3" type="submit">
        S'identifier
    </button>
</form>
  </main>

{% include 'inc/footer.html.twig' %}

{% endblock %}
