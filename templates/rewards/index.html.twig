{% extends 'base.html.twig' %}

{% block title %}Rewards index{% endblock %}

{% block body %}
    <h1>Rewards index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reward in rewards %}
            <tr>
                <td>{{ reward.id }}</td>
                <td>{{ reward.libelle }}</td>
                <td>{{ reward.image }}</td>
                <td>
                    <a href="{{ path('app_rewards_show', {'id': reward.id}) }}">show</a>
                    <a href="{{ path('app_rewards_edit', {'id': reward.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_rewards_new') }}">Create new</a>
{% endblock %}
