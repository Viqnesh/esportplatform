{% extends 'base.html.twig' %}

{% block title %}Scoresheet index{% endblock %}

{% block body %}
    <h1>Scoresheet index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ScoreEquipeA</th>
                <th>ScoreEquipeB</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for scoresheet in scoresheets %}
            <tr>
                <td>{{ scoresheet.id }}</td>
                <td>{{ scoresheet.scoreReport }}</td>
                <td>
                    <a href="{{ path('app_scoresheet_show', {'id': scoresheet.id}) }}">show</a>
                    <a href="{{ path('app_scoresheet_edit', {'id': scoresheet.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
